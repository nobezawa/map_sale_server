<h2><%= @shop.name %>のイベント作成</h2>
<%= form_for(@event, :url=>{:action=>'event_create'}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this shop from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    タイトル<br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    説明<br>
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    割引コード<br>
    <%= f.text_field :discount_code %>
  </div>
  <section id="eventForm">
  <div class="field">
    開始時刻<br>
    <%= f.datetime_select :start_time, :use_month_numbers => true %>
  </div>
  <div class="field">
    終了時刻<br>
    <%= f.datetime_select :end_time,  :use_month_numbers => true%>
  </div>
  
  <div class="actions">
    <%= f.hidden_field :shop_id, {:value => @shop.id} %>
    <%= f.submit %>
  </div>
<% end %>
  </section>
